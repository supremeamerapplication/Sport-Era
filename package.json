{
  "name": "sportera",
  "version": "1.0.0",
  "scripts": {
    "dev": "NODE_ENV=development serve .",
    "build": "npm run build:html && npm run build:css && npm run build:js",
    "build:html": "node build.js",
    "build:css": "tailwindcss -i src/styles.css -o dist/styles.min.css --minify",
    "build:js": "terser src/app.js -o dist/app.min.js --compress --mangle",
    "test": "jest",
    "lint": "eslint src/",
    "format": "prettier --write 'src/**/*.{js,css,html}'"
  },
  "devDependencies": {
    "tailwindcss": "^3.3.0",
    "terser": "^5.0.0",
    "esbuild": "^0.18.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "jest": "^29.0.0",
    "dotenv": "^16.0.0"
  }
}